<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sti.carbonfootprintcalculator">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission-sdk-23 android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AppliancesActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.ResultActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.HistoryActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.HistoryAppliances"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.HistoryVehicles"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.VehiclesActivity"
            android:label="@string/app_name" />
        <activity android:name=".activity.MapActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />

        <activity android:name=".activity.GraphActivity"></activity>
    </application>

</manifest>
